<html>
  <head>
    <title>Wanderlust</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
      /* Whole page background */
      body {
        background: linear-gradient(135deg, #0d1b2a, #1b263b); /* dark navy gradient */
        margin: 0;
        height: 100vh;
        color: white; /* default text white */
      }

      /* Dark overlay on image */
      .image-overlay {
        position: relative;
        height: 100%;
        width: 100%;
      }

      .image-overlay img {
        height: 100%;
        width: 100%;
        object-fit: cover;
      }

      .image-overlay::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: rgba(0, 0, 0, 0.4); /* dark transparent overlay */
      }
    </style>
  </head>
  <body>
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
      <div class="row w-100">
        <!-- Left Side: Text + Buttons -->
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center p-5">
          <h1 class="display-4 fw-bold mb-3 text-white">Welcome to Wanderlust</h1>
          <p class="lead mb-4 text-light">Discover amazing destinations and share your travel experiences.</p>
          
          <!-- Buttons -->
          <div class="d-flex gap-3 mb-3">
            <a href="/signup" class="btn btn-primary btn-lg">Sign Up</a>
            <a href="/login" class="btn btn-outline-light btn-lg">Log In</a>
          </div>

          <!-- Get Started -->
          <a href="/listings" class="btn btn-success btn-lg mt-2">üåç Let‚Äôs Get Started ‚Äì See Listings</a>
        </div>

        <!-- Right Side: Image with overlay -->
        <div class="col-md-6 d-none d-md-block p-0">
          <div class="image-overlay">
            <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?w=1200" 
                 alt="Travel">
          </div>
        </div>
      </div>
    </div>
  </body>
</html>


